#request_cpus   = 8
#request_memory = 5 GB

universe      = vanilla
+DesiredOS   = "SL7"
x509userproxy = $ENV(X509_USER_PROXY)
executable    = run_prepare.sh

transfer_input  = True
transfer_output = True
transfer_input_files = run_prepare.sh, setup.tar.gz

log_dir = $(output_dir)_jobs

log_filename  = $(log_dir)/$(sample_name)_$(sample_i)_$(Cluster)_$(Process)
log           = $(log_filename).log
output        = $(log_filename).out
error         = $(log_filename).err
stream_error  = True
stream_output = True

year = 2017
output_dir = 2017_Jun20

arguments = condor $(year) $(output_dir) $(sample_name) $(sample_i)

sample_name = $(Item)
sample_i = $(Step)

queue 1 in data_obs
queue 9 in VBS_EWK
queue 9 in VBS_QCD
queue 9 in Top
queue 8 in WJets_HT
queue 4 in DYJets_LO
